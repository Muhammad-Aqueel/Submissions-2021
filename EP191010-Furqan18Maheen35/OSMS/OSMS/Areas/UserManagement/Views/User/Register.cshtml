<script type="text/javascript">
    function SaveSignup() {
        var frmdata = $('form').serialize();
        if ($("#Name").val() == '' || $("#FatherName").val() == '' || $("#Cnic").val() == '' || $("#Email").val() == '' || $("#Department").val() == '' || $("#Organization").val() == '' || $("#LoginPassword").val() == '' || $("#confirm-password").val() == '' || $("#UserAddress").val() == '')
        {
            alert("All fields are required.");
            return 
        }
        if ($("#LoginPassword").val() !=  $("#confirm-password").val())
        {
            alert("Password and Confirm password must be same.");
            return
        }
        $.ajax({            
            url: "@Url.Action("Insert", "User")",
            type: "Post",
            data: frmdata,
            success: function (response) {
                debugger;
                alert('User registered. You will be redirect to login page.');
                var iUrl = "@Url.Action("Login", "User")";
                window.location.href = iUrl;
                console.log(response);
                if (response.data.UserId > 0) {
                    var iUrl = "@Url.Action("Login", "User")";
                    window.location.href = iUrl;
                }
                //console.log(response.data);

            }
        });
    }

    function Signin() {
        debugger;
        var iUrl = "@Url.Action("Login", "User")";
        window.location.href = iUrl;
    }
</script>