    <section class="login-block">

        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-12">

                    <form class="md-float-material form-material">
                        <div class="text-center">
                            <img src="~/Content/images/logo.png" alt="logo.png">
                            <h1>ONLINE SURVEY MANAGEMENT SYSTEM</h1>
                        </div>
                        <div class="auth-box card" style="margin-top: 50px;">
                            <div class="card-block">
                                <div class="row m-b-20">
                                    <div class="col-md-12">
                                        <h3 class="text-center txt-primary">Sign up</h3>
                                    </div>
                                </div>                               
                                <p class="text-muted text-center p-b-5">Sign up with your regular account</p>
                                <div class="row">
                                    <div class="col-sm-6">
                                        <div class="form-group form-primary">
                                            @Html.TextBoxFor(x => x.Name, new { @name = "Name", @class = "form-control", required = "required" })
                                            <span class="form-bar"></span>
                                            <label class="float-label">Name</label>
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="form-group form-primary">
                                            @Html.TextBoxFor(x => x.FatherName, new { @name = "FatherName", @class = "form-control", required = "required" })
                                            <span class="form-bar"></span>
                                            <label class="float-label">Father Name</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-6">
                                        <div class="form-group form-primary">
                                            @Html.TextBoxFor(x => x.Cnic, new { @name = "Cnic", @class = "form-control", required = "required" })
                                            <span class="form-bar"></span>
                                            <label class="float-label">Cnic</label>
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="form-group form-primary">
                                            @Html.TextBoxFor(x => x.Email, new { @name = "Email", @class = "form-control", required= "required" })
                                            <span class="form-bar"></span>
                                            <label class="float-label">Email</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-6">
                                        <div class="form-group form-primary">
                                            @Html.TextBoxFor(x => x.Department, new { @name = "Department", @class = "form-control", required = "required" })
                                            <span class="form-bar"></span>
                                            <label class="float-label">Department</label>
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="form-group form-primary">
                                            @Html.TextBoxFor(x => x.Organization, new { @name = "Organization", @class = "form-control", required = "required" })
                                            <span class="form-bar"></span>
                                            <label class="float-label">Organization</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-6">
                                        <div class="form-group form-primary">
                                            @Html.TextBoxFor(x => x.LoginPassword, new { @name = "password", @class = "form-control", @type = "Password", required = "required" })
                                            <span class="form-bar"></span>
                                            <label class="float-label">Password</label>
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="form-group form-primary">
                                            @Html.TextBoxFor(x => x.LoginPassword, new { id = "confirm-password", @name = "confirm-password", @class = "form-control", @type = "Password", required = "required" })
                                            <span class="form-bar"></span>
                                            <label class="float-label">Confirm Password</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group form-primary">
                                    @Html.TextBoxFor(x => x.UserAddress, new { @name = "Address", @class = "form-control", required = "required" })
                                    <span class="form-bar"></span>
                                    <label class="float-label">Address</label>
                                </div>
                                <div class="row m-t-25 text-left">                                    
                                </div>
                                <div class="row m-t-30">
                                    <div class="col-md-12">
                                        <button type="button" class="btn btn-primary btn-md btn-block waves-effect text-center m-b-20" onclick="SaveSignup()">Sign up now</button>
                                        <button type="button" class="btn btn-success btn-md btn-block waves-effect text-center " onclick="Signin()">Sign in</button>
                                    </div>
                                </div>
                                <hr />                                
                            </div>
                        </div>
                    </form>
                    
                </div>

            </div>

        </div>

